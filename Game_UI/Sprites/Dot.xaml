<UserControl x:Class="Game_UI.Sprites.Dot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_UI.Sprites"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid Name="dot">
        <Ellipse x:Name="dott" Fill="Yellow" HorizontalAlignment="Center" Width="4" Height="4" Stroke="White" StrokeThickness="0.5" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
