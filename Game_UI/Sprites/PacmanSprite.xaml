<UserControl x:Class="Game_UI.Sprites.PacmanSprite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_UI.Sprites"
             mc:Ignorable="d" 
             HorizontalAlignment="Center" VerticalAlignment="Center">
    <Canvas Name="pacEllipse">
        <Ellipse StrokeThickness="5" Stroke="Black" MinWidth="40" MinHeight="40" Fill="Yellow"/>
        <Ellipse Fill="Yellow" Height="5" Canvas.Left="24" Stroke="Black" StrokeThickness="5" Canvas.Top="11" Width="5" RenderTransformOrigin="2,-0.667"/>
    </Canvas>
</UserControl>
